{
    "extends": "@quasar/app-vite/tsconfig-preset",
    "compilerOptions": {
        "lib": ["es2015", "dom", "es2015.promise"],
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"],
            "app/*": ["*"],
            "components/*": ["src/components/*"],
            "layouts/*": ["src/layouts/*"],
            "pages/*": ["src/pages/*"],
            "assets/*": ["src/assets/*"],
            "boot/*": ["src/boot/*"],
            "stores/*": ["src/stores/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src-pwa/*.d.ts",
        "src-bex/*.d.ts",
        "src-ssr/*.d.ts"
    ],
    "exclude": ["/dist", ".quasar", "node_modules"]
}
